extends pug/base

prepend vars
  - title = 'Pagina niet gevonden'

append vars
  //-

block content
  .container
    +breadcrumb(['Home'], 'Select your language')
    section.section.section-not-found.with-aside
      h1 Helaas, de pagina die je zoekt bestaat niet
      .section__wrapper
        .section__content
          form.form
            h4.text-primary Niet gevonden wat je zocht?
            p Phasellus et magna neque. Etiam eu auctor est. Etiam aliquam pulvinar augue quis bibendum. Interdum et malesuada fames ac ante ipsum primis in faucibus.
            .form__fields
              input.input(type="text" placeholder="Naam" name="name")
              input.input(type="email" placeholder="E-mailadres" name="email")
              textarea.textarea(name="ask" placeholder="Type hier je vraagâ€¦")
            button.button.button--with-arrow(type="submit") Verstuur
              +svg("arrow-right")
        .section__aside
          .registration-links
            h3 Hier kun je je aanmelden
            a.button.button--round-arrow(href="/" title="Aanmelden als gastgezin") Aanmelden als gastgezin
              span 
                +svg('arrow-right')
            a.button.button--round-arrow(href="/" title="Aanmelden als gast") Aanmelden als gast
              span 
                +svg('arrow-right')
            .registration-links__icon
              +svg('sheet')