            },
            {
              text: "Nieuws",
              href: "news.html"
            },
            {
              text: "Vraag & antwoord",
              href: "faq.html",
              dropdown: true,
              class: "dropdown-link"
            },
            {
              text: "Downloads",
              href: "downloads.html"
            },
            {
              text: "Over ons",
              href: "about.html"
            },
