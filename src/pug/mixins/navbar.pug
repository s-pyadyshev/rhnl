      each link in links
        if !link.dropdown
          li(class=(link.active ? "current-menu-item" : "" ))
            a.navbar__link(href=link.href class=link.class)= link.text
        if link.dropdown
          li(class=(link.active ? "current-menu-item" : "" ))
            .dropdown.dropdown--nav-cards
              button.navbar__link(class=link.class data-toggle='dropdown')= link.text
